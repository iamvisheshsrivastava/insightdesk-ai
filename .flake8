# .flake8 configuration for GitHub Actions
[flake8]
max-line-length = 88
extend-ignore = 
    # Black compatibility
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    # Project specific ignores
    F401,  # imported but unused (common in __init__.py)
    F841,  # local variable assigned but never used
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .coverage,
    .pytest_cache,
    migrations,
    notebooks,
    mlruns
per-file-ignores =
    __init__.py:F401
    tests/*:S101  # Allow assert in tests
max-complexity = 10